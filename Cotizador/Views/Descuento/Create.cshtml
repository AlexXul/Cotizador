@model Descuento
@{
    ViewData["Title"] = "Crear Descuento";
}

<section>
    <form asp-action="Create" method="post" class="row">
        <div class="form-group col-sm-12 col-lg-4"></div>
        <div class="form-group col-sm-12 col-lg-4">
            <label asp-for="Valor" class="control-label"></label>
            <input asp-for="Valor" class="form-control" />
            <span asp-for="Valor" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-12 col-lg-4"></div>
        <div class="form-group col-sm-12 col-lg-4"></div>
        <div class="form-group col-sm-12 col-lg-4">
            <button class="btn btn-success form-control">Guardar</button>
        </div>
    </form>
</section>