
@model IEnumerable<Producto>
@{
    ViewData["Title"] = "Producto";
}
<h1>Productos</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>CodFab</th>
            <th>CodProv</th>
            <th>Descripcion</th>
            <th>CodigoSat</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.CodFab</td>
                <td>@item.CodProv</td>
                <td ><p style="text-overflow: ellipsis; width: 200px;  padding: 2px 5px;">@item.Descripcion</p></td>
                <td>@item.CodigoSat</td>
                <td>@item.Precio</td>

                <td><a href="@Url.Action("Edit","Producto",new {id=item.Id })" class="btn btn-success">Editar</a>| <a onclick="return confirm('¿Desea Eliminar este Producto?')" href="@Url.Action("Delete","Producto",new {id=item.Id })" class="btn btn-success">Eliminar</a></td>
            </tr>
        }
    </tbody>
    <tfoot>

    </tfoot>
</table>  
@section scripts{
    <script>
        $(document).ready(function () {
             
        });
    </script>
 }

   
 